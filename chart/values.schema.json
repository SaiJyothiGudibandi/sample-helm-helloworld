{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "required": [
      "image"
    ],
    "properties": {
      "image": {
        "type": "object",
        "required": [
          "gcrImageLoc",
          "pullPolicy"
        ],
        "properties": {
          "gcrImageLoc": {
            "type": "string",
            "pattern": "^[ a-z0-9-_]+$"
          },
          "pullPolicy": {
            "type": "string",
            "pattern": "^(Always|Never|IfNotPresent)$"
          }
        }
      }
    }
  }
